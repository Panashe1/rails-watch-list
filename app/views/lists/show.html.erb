<div class="container">
  <h2 class="my-5"><%= @list.name %></h2>
</div>

  <div class= "container">
    <div class="row">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col-12 col-sm-6 col-md-4">
          <div class="card card-poster" >
            <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, class: "movie-img rounded-top" %>
            <div class="card-body">
              <div class= "d-flex justify-content-between align-item -center">
                <h5 class="card-text"><%= bookmark.movie.title %></h5>
                <p class="card-text bold"><%= bookmark.movie.rating %></p>
              </div>
              <p class="card-text"><%= bookmark.movie.overview %></p>
              <p class="card-text"><%= bookmark.comment %></p>
            </div>

            <div>
               <%= link_to "Delete",
                    bookmark_path("#{bookmark.id}"),
                    method: :delete,
                    data: { confirm: "Are you sure?" }, class: "btn btn-primary button-56" %>
            </div>


          </div>
        </div>
      <% end %>
    </div>
  </div>
