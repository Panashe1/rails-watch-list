<div class="container">
  <h2><%= @list.name %></h2>
</div>

  <div class= "container">
    <div class="row">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col-3">
          <div class="card" >
            <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, class: "movie-img rounded-top" %>
            <div class="card-body">
              <p class="card-text"><%= bookmark.movie.title %></p>
              <p class="card-text"><%= bookmark.movie.overview %></p>
              <p class="card-text"><%= bookmark.comment %></p>
              <p class="card-text"><%= bookmark.movie.rating %></p>
              <%= link_to "Delete",
                    bookmark_path("#{bookmark.id}"),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="container">
    <%= link_to "New Movie", "/lists/#{@list.id}/bookmarks/new", class: "btn btn-primary" %>
  </div>
